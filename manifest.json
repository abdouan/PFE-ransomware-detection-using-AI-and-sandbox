{
  "manifest_version": 3,
  "name": "Xenix",
  "version": "1.0",
  "key": "",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "xenix_ph.png",
      "48": "xenix_ph.png",
      "128": "xenix_ph.png"
    }
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": [
    "identity",
    "identity.email",
    "storage",
    "notifications",
    "alarms"
  ],

  "host_permissions": [
    "https://gmail.googleapis.com/*",
    "https://mail.google.com/*"
  ],

  "oauth2": {
    "client_id": "642707496297-kbrd0tl7k9m8m84ad3kkqj84c0sniihv.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/gmail.readonly"]
  },

  "externally_connectable": {
    "matches": ["*://*.google.com/*"]
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },

  "web_accessible_resources": [{
    "resources": ["xenix_ph.png"],
    "matches": ["<all_urls>"]
  }],

  "icons": {
    "16": "xenix_ph.png",
    "48": "xenix_ph.png",
    "128": "xenix_ph.png"
  }
}
